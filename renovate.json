{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rebaseWhen": "behind-base-branch",
    "labels": [
    ":recycle: dependencies"
  ],
  "commitMessageTopic": "{{depName}}",
  "commitMessageAction": "Bump",
  "packageRules": [
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "addLabels": [
        ":snake: python"
      ]
    }
  ]
}
